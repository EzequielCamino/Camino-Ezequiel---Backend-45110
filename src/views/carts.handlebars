{{#if cart}}
<div>
    <h1>Showing cart with ID: {{cart._id}}</h1>
    <table class="table">
        <thead>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Code</th>
            <th>Price</th>
            <th>Status</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Thumbnails</th>
        </thead>
        <tbody>
            {{#each cart.products}}
            <tr>
                <td>{{this.product._id}}</td>
                <td>{{this.product.title}}</td>
                <td>{{this.product.description}}</td>
                <td>{{this.product.code}}</td>
                <td>{{this.product.price}}</td>
                <td>{{this.product.status}}</td>
                <td>{{this.product.stock}}</td>
                <td>{{this.product.category}}</td>
                <td>{{this.quantity}}</td>
                <td>
                    {{#each this.product.thumbnails}}
                    <img src="../img/{{this}}" style="height: 200px">
                    {{/each}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<h1>Cart not found. Please verify ID</h1>
{{/if}}